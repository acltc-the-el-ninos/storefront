    <section>
      <div class="row">
        <div class="col-sm-9">
          <div class="taco_single">
            <h1>Create a new product:</h1>

            <%= form_tag '/products', method: :post do %>

            <div>
              <%= label_tag :name %>
              <%= text_field_tag :name, @taco.name %>
            </div>
            <div>
              <%= label_tag :price %>
              <%= text_field_tag :price, @taco.price %>
            </div>
            <div>
              <%= label_tag :description %>
              <%= text_field_tag :description, @taco.description %>
            </div>
            <div>
              <%= label_tag :rating %>
              <%= text_field_tag :rating, @taco.rating %>
            </div>
            <div>
              <%= label_tag :supplier %>
              <%= collection_select :supplier, :supplier_id, @suppliers, :id, :name %>
            </div>
            <%= submit_tag "Add Taco" %>
            <% end %>
          </div>
        </div>
      </div>
    </section>
